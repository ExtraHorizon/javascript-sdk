{
  "compilerOptions": {
    "module": "ESNext",
    "declaration": true,
    "target": "ES2019",
    "moduleResolution": "node",
    "outDir": "./build",
    "baseUrl": "./",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "*": ["node_modules/*", "types/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
