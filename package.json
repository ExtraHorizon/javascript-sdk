{
  "name": "@extrahorizon/javascript-sdk",
  "version": "6.0.0",
  "description": "",
  "main": "build/index.cjs.js",
  "types": "build/types/index.d.ts",
  "module": "build/index.mjs",
  "author": "Qompium",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "clean": "rimraf build",
    "start": "yarn test",
    "start:watch": "yarn test --watch --reporters=\"default\"",
    "create-version-file": "echo \"export const version = '$(node -p \"require('./package.json').version\")';\" > src/version.ts",
    "create-mock-sdk": "node generateMockTypes.js > src/mockType.ts",
    "build": "yarn create-version-file && yarn clean && yarn build:library && yarn create-mock-sdk && yarn build:declarations",
    "build:library": "rollup --config rollup.config.js",
    "build:declarations": "tsc --project tsconfig.declarations.json",
    "watch": "yarn create-version-file && rollup --config rollup.config.js -w",
    "watch:declarations": "tsc -w --project tsconfig.declarations.json",
    "add-suffix": "node ./node_modules/npm-version-suffix/run-add-suffix.js",
    "remove-suffix": "node ./node_modules/npm-version-suffix/run-remove-suffix.js",
    "prepare": "yarn build && husky install",
    "test": "jest",
    "test:e2e": "jest tests/e2e",
    "lint": "eslint src --ext .ts",
    "prettier": "prettier src",
    "serve:website": "docsify serve .",
    "majestic": "majestic"
  },
  "files": [
    "build"
  ],
  "dependencies": {
    "axios": "^0.21.4",
    "buffer": "^6.0.3",
    "crypto-es": "^1.2.7",
    "form-data": "^4.0.0",
    "oauth-1.0a": "^2.2.6",
    "pako": "^2.0.3",
    "platform-specific": "^1.1.0",
    "ts-toolbelt": "^9.6.0"
  },
  "devDependencies": {
    "@qompium/eslint-config-q-node": "^1.2.9",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-typescript": "^8.2.1",
    "@types/jest": "^27.0.1",
    "@types/nock": "^11.1.0",
    "@types/node": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "docsify-cli": "^4.4.3",
    "dotenv": "^10.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.2",
    "jest": "^27.4.6",
    "jest-junit": "^12.2.0",
    "jest-stare": "^2.3.0",
    "lint-staged": "^11.0.0",
    "nock": "^13.1.3",
    "npm-version-suffix": "galmail/npm-version-suffix",
    "prettier": "^2.4.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.52.2",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^27.0.3",
    "typescript": "^4.4.3"
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint --fix",
      "yarn prettier src --write"
    ]
  }
}
